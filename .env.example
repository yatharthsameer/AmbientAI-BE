# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@postgres:5432/nurse_conversations

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg,flac

# ASR Settings
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_BEAM_SIZE=5

# Q&A Configuration
QA_MODEL=hybrid
MAX_QUESTION_LENGTH=512
MAX_CONTEXT_LENGTH=4096
CONFIDENCE_THRESHOLD=0.6

# AI Services Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Hybrid Extraction Settings
ENABLE_HYBRID_EXTRACTION=true
ENABLE_FINAL_VERIFICATION=true
DISTILBERT_MODEL=distilbert-base-cased-distilled-squad
DISTILBERT_DEVICE=auto
DISTILBERT_MAX_LENGTH=512

# Final Verification Settings
VERIFICATION_MAX_ANSWER_LENGTH=200
VERIFICATION_MIN_ANSWER_LENGTH=3
ENABLE_TEMPORAL_CONTEXT=true
ENABLE_UNIT_EXTRACTION=true

# Quality Scoring
QUALITY_SCORE_THRESHOLD=0.7
MANUAL_REVIEW_THRESHOLD=0.4

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: JWT Settings
JWT_ALGORITHM=HS256

# Optional: CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Optional: Logging
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
